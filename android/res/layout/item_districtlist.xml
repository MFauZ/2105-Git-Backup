<?xml version="1.0" encoding="utf-8"?>

<!--This is the layout for the Ranking Item-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/appSPadding"
    android:weightSum="7">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civRankingProfilePics"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:src="@drawable/ic_temp_logo"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorAccentDark"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="@dimen/appSPadding">
        <TextView
            android:id="@+id/tvDistrictUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textTitle"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPrestige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textPrestige"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivDistrictRecycle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_recycling"
            android:contentDescription="@string/description_recycle_count"/>

        <TextView
            android:id="@+id/tvRecycleCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textPara"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivDistrictWins"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sword"
            android:contentDescription="@string/description_win_count"/>

        <TextView
            android:id="@+id/tvDistrictWins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textPara"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>