<?xml version="1.0" encoding="utf-8"?>

<!--This is the layout for the Recyclable Item-->

<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/appSPadding"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRecyclableImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_paper"
            android:contentDescription="@string/description_scanned_icon"/>

        <TextView
            android:id="@+id/tvRecyclableType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecyclableTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_recyclable_timestamp"
            android:layout_marginStart="@dimen/appMMargin"/>

        <TextView
            android:id="@+id/tvRecyclableVerified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msg_recyclable_verified"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/appMMargin"/>

        <TextView
            android:id="@+id/tvRecyclableExpires"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_expires"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/appMMargin"/>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>