<?xml version="1.0" encoding="utf-8"?>

<!--This is the layout for the Map Screen-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activities.MapActivity" />

    <LinearLayout
        android:id="@+id/llmap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/appMPadding"
        android:layout_marginTop="@dimen/appSMargin"
        android:layout_marginStart="@dimen/appMMargin"
        android:layout_marginEnd="@dimen/appXLMargin"
        android:background="@drawable/bg_profile_box">

        <TextView
            android:id="@+id/tvBattlePrepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_map"
            android:textColor="@color/mainText"
            android:textSize="@dimen/textInput"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvBattlePrepIns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/msg_map_instructions"
            android:textColor="@color/mainText"
            android:textSize="@dimen/textPara"/>
    </LinearLayout>

</RelativeLayout>