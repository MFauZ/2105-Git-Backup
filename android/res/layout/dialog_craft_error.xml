<?xml version="1.0" encoding="utf-8"?>

<!--This is the layout for the Failed Craft Dialog-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/appSPadding"
            android:text="@string/dialog_weapon_error"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/textTitle"
            android:textColor="@color/whiteText"
            android:background="@color/redText">
        </TextView>

        <TextView
            android:id="@+id/dialogError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogTitle"
            android:padding="@dimen/appSPadding"
            android:text="@string/dialog_weapon_error_msg"
            android:textAlignment="center"
            android:textSize="@dimen/textPara">
        </TextView>

        <Button
            android:id="@+id/btnOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogError"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/appMMargin"
            android:background="@drawable/bg_profile_box"
            android:text="@string/dialog_weapon_ok"
            android:textSize="@dimen/textPara"
            android:layout_gravity="center"/>

</RelativeLayout>